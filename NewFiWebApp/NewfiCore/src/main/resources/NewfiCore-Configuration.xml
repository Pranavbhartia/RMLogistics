<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:c="http://www.springframework.org/schema/c"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:util="http://www.springframework.org/schema/util" xmlns:task="http://www.springframework.org/schema/task"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
		http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-4.1.xsd http://www.springframework.org/schema/context
	http://www.springframework.org/schema/context/spring-context.xsd
	http://www.springframework.org/schema/task http://www.springframework.org/schema/task/spring-task.xsd">

	<context:property-placeholder location="classpath*:config.properties" />

	<context:component-scan base-package="com.nexera.core.*" />
	<context:annotation-config />
	<task:annotation-driven />


	<bean id="taskExecutor"
		class="org.springframework.scheduling.concurrent.ThreadPoolTaskExecutor">
		<property name="corePoolSize" value="2" />
		<property name="maxPoolSize" value="5" />
		<property name="WaitForTasksToCompleteOnShutdown" value="true" />
	</bean>


	<bean id="emailTaskExecutor"
		class="org.springframework.scheduling.concurrent.ThreadPoolTaskExecutor">
		<property name="corePoolSize" value="2" />
		<property name="maxPoolSize" value="5" />
		<property name="WaitForTasksToCompleteOnShutdown" value="true" />
	</bean>


	<bean name="complexJobDetail"
		class="org.springframework.scheduling.quartz.JobDetailFactoryBean">
		<property name="jobClass"
			value="com.nexera.core.batchprocessor.LoanBatchProcessor" />
		<property name="durability" value="true" />
	</bean>

	<bean name="emailJobDetail"
		class="org.springframework.scheduling.quartz.JobDetailFactoryBean">
		<property name="jobClass"
			value="com.nexera.core.batchprocessor.EmailBatchProcessor" />
		<property name="durability" value="true" />
	</bean>
	
	<bean name="checkUserprofile"
		 class="org.springframework.scheduling.quartz.JobDetailFactoryBean">
		<property name="jobClass" 
			value="com.nexera.core.batchprocessor.CheckUserProfileBatch"></property>
			<property name="durability" value="true" />
	</bean>
	
	<bean name="checkLockUserRate"
		 class="org.springframework.scheduling.quartz.JobDetailFactoryBean">
		<property name="jobClass" 
			value="com.nexera.core.batchprocessor.CheckLockRateStatusBatch"></property>
			<property name="durability" value="true" />
	</bean>
	
	<bean name="checkLoanApplicationFee"
		 class="org.springframework.scheduling.quartz.JobDetailFactoryBean">
		<property name="jobClass" 
			value="com.nexera.core.batchprocessor.CheckLoanApplicationFeeBatch"></property>
			<property name="durability" value="true" />
	</bean>
	
	<bean name="checkIsBankConnected"
		 class="org.springframework.scheduling.quartz.JobDetailFactoryBean">
		<property name="jobClass" 
			value="com.nexera.core.batchprocessor.CheckIsConnectedToBankBatch"></property>
			<property name="durability" value="true" />
	</bean>
	
	<bean name="checkApplicationProgress"
		 class="org.springframework.scheduling.quartz.JobDetailFactoryBean">
		<property name="jobClass" 
			value="com.nexera.core.batchprocessor.CheckApplicationProgressBatch"></property>
			<property name="durability" value="true" />
	</bean>
	
	<bean name="checkNeededItems"
		 class="org.springframework.scheduling.quartz.JobDetailFactoryBean">
		<property name="jobClass" 
			value="com.nexera.core.batchprocessor.CheckNeededItems"></property>
			<property name="durability" value="true" />
	</bean>

	<bean id="emailCronTrigger"
		class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
		<property name="jobDetail" ref="emailJobDetail" />
		<property name="cronExpression" value="0 0/1 * * * ?" />
	</bean>
	
	

	<bean id="cronTrigger"
		class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
		<property name="jobDetail" ref="complexJobDetail" />
		<property name="cronExpression" value="0 0/59 * * * ?" />
	</bean>
	
	<bean id="userProfileCronTrigger"
		class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
		<property name="jobDetail" ref="checkUserprofile" />
		<property name="cronExpression" value="0 0/1 * * * ?" />
	</bean>
	
	<bean id="lockUserRateCronTrigger"
		class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
		<property name="jobDetail" ref="checkLockUserRate" />
		<property name="cronExpression" value="0 0/1 * * * ?" />
	</bean>
	
	<bean id="applicationFeesCronTrigger"
		class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
		<property name="jobDetail" ref="checkLoanApplicationFee" />
		<property name="cronExpression" value="0 0/1 * * * ?" />
	</bean>
	
	<bean id="isBankConnectedCronTrigger"
		class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
		<property name="jobDetail" ref="checkIsBankConnected" />
		<property name="cronExpression" value="0 0/1 * * * ?" />
	</bean>
	
	<bean id="applicationProgressCronTrigger"
		class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
		<property name="jobDetail" ref="checkApplicationProgress" />
		<property name="cronExpression" value="0 0/1 * * * ?" />
	</bean>
	
	<bean id="neededDocumentCronTrigger"
		class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
		<property name="jobDetail" ref="checkNeededItems" />
		<property name="cronExpression" value="0 0/1 * * * ?" />
	</bean>

	<!-- Scheduler factory bean to glue together jobDetails and triggers to 
		Configure Quartz Scheduler -->
	<bean class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
		<property name="jobDetails">
			<list>
				<ref bean="complexJobDetail" />
				<ref bean="emailJobDetail" />
				<ref bean="checkUserprofile"/>
				<ref bean="checkLockUserRate"/>
				<ref bean="checkLoanApplicationFee"/>
				<ref bean="checkIsBankConnected"/>
				<ref bean="checkApplicationProgress"/>
				<ref bean="checkNeededItems"/>
			</list>
		</property>

		<property name="triggers">
			<list>
				<ref bean="cronTrigger" />
				<ref bean="emailCronTrigger" />
				<ref bean="userProfileCronTrigger" />
				<ref bean="lockUserRateCronTrigger" />
				<ref bean="applicationFeesCronTrigger" />
				<ref bean="isBankConnectedCronTrigger" />
				<ref bean="applicationProgressCronTrigger" />
				<ref bean="neededDocumentCronTrigger" />
			</list>
		</property>
	</bean>

</beans>
